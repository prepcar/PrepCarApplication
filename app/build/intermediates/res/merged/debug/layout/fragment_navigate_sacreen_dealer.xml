<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#293A92"
        android:orientation="horizontal" >

        <TextView
              android:fontFamily="fonts/Helvetica-Bold.otf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/buyerlist"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/back"
            android:visibility="gone" />
    </RelativeLayout>

    <ListView
        android:id="@+id/dealer_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topbar"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:divider="#c4c4c4"
        android:dividerHeight="1dp" >
    </ListView>

        <TextView
            android:id="@android:id/empty"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You have no active leads">
        </TextView>


    <RelativeLayout
        android:id="@+id/lin_navi"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true" >

            <RelativeLayout
                android:id="@+id/lin_menu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/white" >

                <ImageView
                    android:id="@+id/image_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:background="@drawable/icon_home" />
            </RelativeLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:background="@drawable/foot_shadow" />

            <RelativeLayout
                android:id="@+id/lin_search"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/white" >

                <ImageView
                    android:id="@+id/image_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:background="@drawable/icon_calender" />
            </RelativeLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:background="@drawable/foot_shadow" />

            <RelativeLayout
                android:id="@+id/lin_carplan"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/white" >

                <ImageView
                    android:id="@+id/image_carplan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/foot_logo" />
            </RelativeLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:background="@drawable/foot_shadow" />

            <RelativeLayout
                android:id="@+id/lin_chat"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/white" >

                <ImageView
                    android:id="@+id/image_chat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:background="@drawable/icon_notification" />
                <ImageView
                    android:id="@+id/image_dot"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignTop="@+id/image_chat"
                    android:layout_toRightOf="@+id/image_chat"
                    android:background="@drawable/red_dot"/>
            </RelativeLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:background="@drawable/foot_shadow" />

            <RelativeLayout
                android:id="@+id/lin_profile"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/white" >

                <ImageView
                    android:id="@+id/image_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:background="@drawable/icon_user" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>