<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dev.prepcarapplication.DealerNewCarActivity" >

    <RelativeLayout
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#293A92"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:fontFamily="fonts/Helvetica-Bold.otf"
            android:text="@string/newcar"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

       <ImageView
            android:id="@+id/image_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/back" />
        <ImageView
            android:id="@+id/icHome"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_home" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="fonts/Helvetica-Bold.otf"
                android:text="@string/year"
                android:textAllCaps="true"
                android:textColor="#293A92"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/spiner_dyear1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_weight="1"
                android:hint="@string/year"
                android:background="@color/white"
                android:maxLength="4"
                android:inputType="number"
                android:padding="5dp"
                 />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="fonts/Helvetica-Bold.otf"
                android:text="@string/make"
                android:textAllCaps="true"
                android:textColor="#293A92"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/spiner_dmake1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:hint="@string/make"
                android:background="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="fonts/Helvetica-Bold.otf"
                android:text="@string/model"
                android:textAllCaps="true"
                android:textColor="#293A92"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/spiner_dmodel1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:hint="@string/model"
                android:background="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:fontFamily="fonts/Helvetica-Bold.otf"
                android:text="@string/transmission"
                android:textColor="#293A92"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:id="@+id/lin_manual"
                    android:layout_width="0dp"
                    android:layout_height="38dp"
                    android:layout_weight="1"
                    android:background="@drawable/discoveryshape"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/text_manual"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="fonts/Helvetica-Bold.otf"
                        android:text="@string/manual"
                        android:textAllCaps="true"
                        android:textColor="#c4c4c4"
                        android:textStyle="bold" />
                </RelativeLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="10dp"
                    android:layout_weight="0.2" />

                <RelativeLayout
                    android:id="@+id/lin_automatic"
                    android:layout_width="0dp"
                    android:layout_height="38dp"
                    android:layout_weight="1"
                    android:background="@drawable/discoveryshape"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/text_automatic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:fontFamily="fonts/Helvetica-Bold.otf"
                        android:text="@string/automatic"
                        android:textAllCaps="true"
                        android:textColor="#c4c4c4"
                        android:textStyle="bold" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:fontFamily="fonts/Helvetica-Bold.otf"
                android:text="@string/exteriorcolor"
                android:textAllCaps="true"
                android:textColor="#293A92"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/edit_exteriorcolur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/dropdown"
                android:inputType="text"
                android:padding="7dp"
                android:textColor="@android:color/black" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:fontFamily="fonts/Helvetica-Bold.otf"
                android:text="@string/features"
                android:textAllCaps="true"
                android:textColor="#293A92"
                android:textStyle="bold" />

            <com.dev.prepcarapplication.adapter.MultiSelectionSpinner
                android:id="@+id/et_features"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/dropdown"
                android:hint="Features"
                android:inputType="text"
                android:padding="5dp"
                android:singleLine="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:fontFamily="fonts/Helvetica-Bold.otf"
                android:text="@string/stocknumber"
                android:textAllCaps="true"
                android:textColor="#293A92"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edit_stocknumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/input_type"
                android:padding="7dp"
                android:textColor="@android:color/black" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:fontFamily="fonts/Helvetica-Bold.otf"
                android:text="@string/uploadcarphoto"
                android:textAllCaps="true"
                android:textColor="#293A92"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/grid_carpic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible" />

                <EditText
                    android:id="@+id/edit_picpath"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:layout_weight="2"
                    android:background="@drawable/input_type"
                    android:focusable="false"
                    android:padding="7dp"
                    android:textColor="#c4c4c4"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/buton_dealer_browse"
                    style="@style/ButtonAppTheme"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="7dp"
                    android:layout_weight="1"
                    android:fontFamily="fonts/Helvetica-Bold.otf"
                    android:text="@string/browse"
                    android:textColor="@android:color/white"
                    android:textSize="13sp" />
            </LinearLayout>


            <Button
                android:id="@+id/buton_uploadcar"
                style="@style/ButtonAppTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:text="@string/upload"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>